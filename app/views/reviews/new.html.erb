<h1>New Review</h1>

<%= render partial: 'users/displayErrors', locals: { data_type: @review } %>

<%= form_for(@review) do |f| %>

    <%= f.hidden_field :event_id %>

    <%= f.label :rating, 'Rating (1-5)' %><br/>
    <%= f.number_field :rating, in: 1..5 %><br/>

    <%= f.label :content, 'Your Review' %><br/>
    <%= f.text_area :content %><br/>

    <%= f.submit 'Submit Review' %>
<% end %>