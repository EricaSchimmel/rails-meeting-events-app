<h1>New Review</h1>

<%= render partial: 'displayErrors', locals: { data_type: @user } %>

<%= form_for(@review) do |f| %>
    <%= f.label :rating, "Rating (1-5)" %><br/>
    <%= f.number_field :rating, 1, in: 1...5 %><br/>

    <%= f.label :content, "Your Review" %><br/>
    <%= f.text_area :content %><br/>

    <%= f.submit "Submit Review" %>
<% end %>