<h1><%= @user.name %></h1>

<h2><%= @user.name %>'s Hosted Events</h2>

<% if @user.events.any? %>
    <% @user.events.each do |event| %>
        <div class='user-event'>
            <%= render partial: 'events/partials/eventCard', locals: { event: event } %>
        </div>
    <% end %>

<% else %>
        <p>This user does not have any events at this time.</p>
<% end %>
