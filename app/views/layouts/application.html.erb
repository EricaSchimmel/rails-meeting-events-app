<!DOCTYPE html>
<html>
  <head>
    <title>Meetups and Events</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <h1><%= link_to 'Events and Meetups', root_path %></h1>

        <!-- Add search bar here later on -->

        <ul>
          <% if !logged_in? || current_user == nil %>
            <li><%= link_to 'Sign Up', signup_path %></li>
            <li><%= link_to 'Log In', login_path %></li>
          <% else %>
            <li><%= link_to 'Create an Event', new_event_path %></li>
            <li>Hello, <%= link_to current_user.full_name, user_path(current_user.id) %></li>
            <li><%= link_to 'Log Out', logout_path, method: 'delete' %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <%= yield %>


  </body>
</html>
