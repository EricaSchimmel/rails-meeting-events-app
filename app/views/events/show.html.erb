<h1><%= @event.title %></h1>
<h2>Hosted By: <%= @event.user.full_name %></h2>

<h3><%= date_of @event %> from <%= time_of @event %></h3>


<h3>About</h3>
<p><%= @event.description %></p>

<%= render partial: 'displayEditRemoveReservations', locals: { event: @event } %>

<% if can_reserve?(@event) %>
    <%= render partial: 'displayReserve', locals: { reservation: @reservation } %>
<% elsif !logged_in? %>
    <p>To RSVP to this event, you must be logged in.</p>
<% end %>

<%= link_to 'Reviews', event_reviews_path(@event.id) %>