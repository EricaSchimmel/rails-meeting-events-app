<h1>New Event</h1>

<%= form_for @event, controller: 'events', action: 'create' do |f| %>
    <%= f.label :title %><br/>
    <%= f.text_field :title %><br/>

    <%= f.label :description %><br/>
    <%= f.text_area :description %><br/>

    <%= f.label :date %><br/>
    <%= f.date_field :date, min: Date.today %><br/>

    <%= f.label :address %><br/>
    <%= f.text_field :address %></br>

    <%= f.label :time %></br>
    <%= f.time_field :time %></br>

    <%= f.submit "Create Event" %>
<% end %>
