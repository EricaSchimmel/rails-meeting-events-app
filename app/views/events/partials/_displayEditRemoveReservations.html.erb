<% if can_edit_remove_and_view_event_reservations?(event) %>
    <div class='edit-remove-view-reservations'>
        <ul>
            <li><%= link_to 'Edit Event', edit_event_path(event) %></li>

            <li>
                <%= form_tag event_path(event.id), method: "delete" do %>
                    <%= submit_tag "Remove Event" %>
                <% end %>
            </li>

            <li>
                <%= link_to 'See Reserved Users', event_reservations_path(event.id) %></li>
            </li>
        </ul>
    </div>
<% end %>